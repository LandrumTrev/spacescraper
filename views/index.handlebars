<div class="container-fluid">
  <div class="card-columns">
    {{!-- articles: is all docs from "articles" collection --}} {{#each articles}}
      <div class="card mt-4">
        <img class="article-image" src="{{thumbnail}}" />
        <div id="{{_id}}" class="card-body">
          <a href="{{link}}" target="_blank">
            <h5 class="card-title">{{ title }}</h5>
          </a>
          <p class="byline">{{ pubDate }} :: <a href="{{authorLink}}" target="_blank">{{ author }}</p></a>
          <p class="article-excerpt">{{ excerpt }}</p>
          <a class="toggle-comment" data-article="{{_id}}">
            <span class="leave-comment">leave a comment:</span>
          </a>
          <form class="comment-form clearfix mb-4" data-article="{{_id}}" action="POST">
            <div class="form-group"><input type="text" class="username-input form-control" placeholder="username"
                data-article="{{_id}}" /></div>
            <div class="form-group"><textarea class="comment-input form-control" placeholder="your comments"
                data-article="{{_id}}"></textarea></div>
            <button class="add-comment btn btn-primary float-right" data-article="{{_id}}">add comment</button>
          </form>
          <div class="article-comments" data-article="{{_id}}">
            {{#each comments}}
              <div>
                <i class="delete-comment fas fa-times" data-comment="{{_id}}"></i>
                <span class="commenting-user">{{ username }} said:</span>
                <span class="users-comment">{{ commentText }}</span>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>